<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    controllerName="my.app.controller.Tenant.Form">
     <m:Page showNavButton="true" navButtonPress="handlerNavBack">
        <ObjectPageLayout
            enableLazyLoading="false"
            useIconTabBar="true"
            showTitleInHeaderContent="false"
            alwaysShowContentHeader="true"
            upperCaseAnchorBar="false">
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <heading>
                        <m:Title text="{model>/titleForm}" />
                    </heading>
                    <snappedTitleOnMobile>
                        <m:Title text="{model>/titleForm}" />
                    </snappedTitleOnMobile>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>
            <headerContent>
                <m:HeaderContainer scrollStep="200" showDividers="false">
                    <m:HBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom">
                        <m:VBox class="sapUiLargeMarginEnd">
                            <m:Title class="sapUiTinyMarginBottom" text="Status:"/>
                            <m:ObjectStatus
                                text="{model>/status}"
                                state="{
                                    path: 'model>/status',
                                    formatter: '.displayStatusState'
                                }"
                                class="sapMObjectStatusLarge" />
                        </m:VBox>
                        <m:VBox class="sapUiLargeMarginEnd">
                            <m:Title class="sapUiTinyMarginBottom" text="Document Date:"/>
                            <m:ObjectStatus
                                text="{model>/DocumentDate}"
                                state="None"
                                class="sapMObjectStatusLarge" />
                        </m:VBox>
                    </m:HBox>
                </m:HeaderContainer>
            </headerContent>
            <sections>
                <ObjectPageSection titleUppercase="false" title="">
                    <subSections>
                        <ObjectPageSubSection title="General" mode="Expanded" titleUppercase="false">
                            <f:Form>
                                <f:layout>
                                    <f:ResponsiveGridLayout
                                        emptySpanXL="0"
                                        emptySpanL="0"
                                        emptySpanM="0"
                                        emptySpanS="0"
                                        columnsXL="2"
                                        columnsL="2"
                                        columnsM="2"
                                        singleContainerFullSize="false" />
                                </f:layout>
                                <f:FormContainer title="">
                                    <f:formElements>
                                        <f:FormElement label="Tenant ID">
                                            <f:fields>
                                                <m:Input
                                                    editable="{= ${model>/buttonSubmit} === 'Update' ? false : true }"
                                                    placeholder="001..."
                                                    required="true"
                                                    name="id"
                                                    change="handlerInputChange"
                                                    value="{model>/id}"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="DB Name">
                                            <f:fields>
                                                <m:Input
                                                    placeholder="host001..."
                                                    required="true"
                                                    name="db_name"
                                                    change="handlerInputChange"
                                                    value="{model>/db_name}"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="DB Connection">
                                            <f:fields>
                                                <m:Input
                                                    required="true"
                                                    placeholder="mysql..."
                                                    name="db_connection"
                                                    change="handlerInputChange"
                                                    value="{model>/db_connection}"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="DB Port">
                                            <f:fields>
                                                <m:Input
                                                    required="true"
                                                    name="db_port"
                                                    placeholder="3306..."
                                                    change="handlerInputChange"
                                                    value="{model>/db_port}"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="">
                                            <f:fields>
                                                <m:RadioButtonGroup
                                                    columns="2"
                                                    valueState="None"
                                                    id="status"
                                                    select="handlerRadioChange"
                                                    selectedIndex="{= ${model>/status} === 'Active' ? 0 : 1 }"
                                                    class="sapUiMediumMarginBottom">
                                                        <m:RadioButton text="Active"/>
                                                        <m:RadioButton text="Inactive" />
                                                </m:RadioButtonGroup>
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>
                                <f:FormContainer title="">
                                    <f:formElements>
                                        <f:FormElement label="DB Username">
                                            <f:fields>
                                                <m:Input
                                                    placeholder="..."
                                                    required="true"
                                                    name="db_username"
                                                    change="handlerInputChange"
                                                    value="{model>/db_username}"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="DB Host">
                                            <f:fields>
                                                <m:Input
                                                    placeholder="localhost,192..."
                                                    required="true"
                                                    name="db_host"
                                                    change="handlerInputChange"
                                                    value="{model>/db_host}"/>
                                            </f:fields>
                                        </f:FormElement>
                                        <f:FormElement label="DB Password">
                                            <f:fields>
                                                <m:Input
                                                    required="{= ${model>/buttonSubmit} === 'Update' ? false : true }"
                                                    name="db_password"
                                                    change="handlerInputChange"
                                                    value="{model>/db_password}"/>
                                            </f:fields>
                                        </f:FormElement>
                                    </f:formElements>
                                </f:FormContainer>
                            </f:Form>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
        <m:footer>
            <m:Bar class="customFooterBar">
                <m:contentRight>
                    <m:Button text="{model>/buttonSubmit}" press="handlerSave"
                        type="Emphasized"
                        class="sapUiTinyMarginEnd" />
                    <m:Button text="Cancel" press="handlerNavBack" />
                </m:contentRight>
            </m:Bar>
        </m:footer>
    </m:Page>
</mvc:View>
